{
	"extends": "@tsconfig/node23/tsconfig.json",

	"compilerOptions": {
    "lib": ["es2024", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator", "ESNext.Promise"],
    "module": "nodenext",
    "target": "es2024",
	"rootDir": "./src",
	"outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
	"sourceMap": true
	
	
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "prisma.config.backup.ts"
  ]

}